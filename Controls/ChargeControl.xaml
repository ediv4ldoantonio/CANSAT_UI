<UserControl x:Class="CANSAT_UI.Controls.ChargeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CANSAT_UI.Controls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="10" Background="#FF23ABE0">
        <StackPanel Margin="10">
            <ui:SymbolIcon x:Name="symbolIcon" Grid.Column="0" Symbol="Lightbulb24" FontSize="200" Foreground="White" />
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="label" Text="Ligado" FontSize="50" Foreground="White" Background="{x:Null}" />
                <ui:ToggleSwitch x:Name="switchControl" Click="switchControl_Checked" HorizontalAlignment="Center" IsChecked="True" Margin="0,10,0,0" />
                <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center" Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="50" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
