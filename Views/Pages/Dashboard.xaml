<Page x:Class="CANSAT_UI.Views.Pages.Dashboard" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:CANSAT_UI.Views.Pages" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:controls="clr-namespace:CANSAT_UI.Controls" xmlns:viewmodels="clr-namespace:CANSAT_UI.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel}" mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" Title="Dashboard">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <controls:ChargeControl x:Name="A" Grid.Column="0" Margin="40, 100" IsTriggered="{Binding Estados[0]}" Tag="A"
                ChangeStateCommand="{Binding ChangeStateCommand}" Label="A"/>
            <controls:ChargeControl x:Name="B" Grid.Column="1" Margin="40, 100" IsTriggered="{Binding Estados[1]}" Tag="B" ChangeStateCommand="{Binding ChangeStateCommand}" Label="B"/>
            <controls:ChargeControl x:Name="C" Grid.Column="2" Margin="40, 100" IsTriggered="{Binding Estados[1]}" Tag="B" ChangeStateCommand="{Binding ChangeStateCommand}" Label="C"/>
        </Grid>
    </Grid>
</Page>
