<Page x:Class="CANSAT_UI.Views.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CANSAT_UI.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" xmlns:viewmodels="clr-namespace:CANSAT_UI.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel}"
      xmlns:controls="clr-namespace:CANSAT_UI.Controls"
      mc:Ignorable="d" 


      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">

        <StackPanel Margin="50">
            <controls:TrashLevelControl TrashLevel="{Binding TrashLevels[0]}"/>
            <TextBlock Margin="0,10,0,0" Text="Balde 1" Foreground="White" FontSize="30"/>
        </StackPanel>

        <StackPanel Margin="50">
            <controls:TrashLevelControl TrashLevel="{Binding TrashLevels[1]}"/>
            <TextBlock Margin="0,10,0,0" Text="Balde 2" Foreground="White" FontSize="30"/>
        </StackPanel>

    </StackPanel>
</Page>
